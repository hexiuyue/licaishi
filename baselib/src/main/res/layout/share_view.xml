<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/sharelin"
            android:padding="15dp"
            android:background="@color/white"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/wx"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@mipmap/ssdk_oks_classic_wechat"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    />
                <RadioButton
                    android:id="@+id/wxp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@mipmap/ssdk_oks_classic_wechatmoments"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    />
                <RadioButton
                    android:id="@+id/qqk"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="QQ空间"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@mipmap/ssdk_oks_classic_qzone"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    />
                <RadioButton
                    android:id="@+id/qq"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="QQ"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@mipmap/ssdk_oks_classic_qq"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    />
            </RadioGroup>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>