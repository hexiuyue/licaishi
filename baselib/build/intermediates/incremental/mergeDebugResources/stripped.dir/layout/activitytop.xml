<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alltops"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    >
        <LinearLayout
            android:id="@+id/seektopview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/seekback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingRight="10dp"
                />
            <android.support.v7.widget.SearchView
                android:id="@+id/SearchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                app:iconifiedByDefault="false"
                app:queryHint="搜索关键字/基金/公司/经理"
                android:background="@drawable/sou"
                app:searchIcon="@mipmap/souicon"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"

                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                >
            </android.support.v7.widget.SearchView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/alltop"
            >
            <ImageView
                android:id="@+id/baseback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/alltext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/baseback2"
                android:layout_toRightOf="@+id/baseback"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/baseback2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/back"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                />
            <View
                android:id="@+id/topviews"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/publicmianviewcolor"
                android:layout_below="@+id/baseback"
                ></View>
        </RelativeLayout>
</RelativeLayout>
