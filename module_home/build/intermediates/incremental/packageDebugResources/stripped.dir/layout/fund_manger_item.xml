<?xml version="1.0" encoding="utf-8"?>

                                                        
    
                 
                            
                                                               
           
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
         android:tag="layout/fund_manger_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/fundmimg"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:tag="binding_1"               
            />
        <TextView
            android:id="@+id/fundmname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_2"                
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/fundmimg"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/viewgui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_3"                                         
            android:textColor="@color/publicnamecolor"
            android:layout_toRightOf="@+id/fundmimg"
            android:layout_alignBottom="@+id/fundmimg"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/publicmangericon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/addicon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/publicnamecolor_view"
            android:layout_below="@+id/viewgui"
            android:layout_marginTop="10dp"
            ></View>
    </RelativeLayout>
         